<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/margin_four">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_maintenance_txt_title"
                    style="@style/font_title_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_four"
                    android:layout_marginStart="@dimen/margin_four"
                    android:layout_marginTop="@dimen/margin_eigth"
                    android:layout_weight=".7"
                    android:drawablePadding="@dimen/margin_four"
                    android:drawableTint="@color/gray_icon"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:text="Manejadoras(UMA)" />

            </LinearLayout>

            <TextView
                style="@style/font_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginTop="@dimen/margin_eigth"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="2"
                android:text="@string/proveedor" />

            <View
                android:id="@+id/divider_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_six"
                android:layout_marginEnd="@dimen/margin_six"
                android:layout_marginStart="@dimen/margin_six"
                android:layout_marginTop="@dimen/margin_four"
                android:background="@color/silver"></View>

            <TextView
                style="@style/font_body_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginTop="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:text="@string/name" />

            <TextView
                android:id="@+id/dialog_maintenance_txt_name"
                style="@style/font_body_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="4"
                android:text="UMA Solutions S.A de C.V." />

            <TextView
                style="@style/font_body_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginTop="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:text="@string/phone" />

            <TextView
                android:id="@+id/dialog_maintenance_txt_phone"
                style="@style/font_body_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="4"
                android:text="(88) 22-02-24-20" />

            <TextView
                style="@style/font_body_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginTop="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:text="@string/mobile" />

            <TextView
                android:id="@+id/dialog_maintenance_txt_mobile"
                style="@style/font_body_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="4"
                android:text="(88) 22-02-24-20" />

            <TextView
                style="@style/font_body_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginTop="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:text="@string/email" />

            <TextView
                android:id="@+id/dialog_maintenance_txt_email"
                style="@style/font_body_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="4"
                android:text="contacto@umasolutions.com.mx" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_four"
                android:layout_marginEnd="@dimen/margin_six"
                android:layout_marginStart="@dimen/margin_six"
                android:layout_marginTop="@dimen/margin_four"
                android:background="@color/silver"></View>
            <TextView
                style="@style/font_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginTop="@dimen/margin_six"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="2"
                android:text="@string/frequency" />

            <TextView
                android:id="@+id/dialog_maintenance_txt_frequency"
                style="@style/font_body_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginBottom="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="4"
                android:text="El mantenimiento cada 8 dias" />


            <TextView
                style="@style/font_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginTop="@dimen/margin_six"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="2"
                android:text="@string/description" />

            <TextView
                android:id="@+id/dialog_maintenance_description"
                style="@style/font_body_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_four"
                android:layout_marginStart="@dimen/margin_four"
                android:layout_marginBottom="@dimen/margin_four"
                android:drawablePadding="@dimen/margin_four"
                android:drawableTint="@color/gray_icon"
                android:gravity="center|start"
                android:maxLines="4"
                android:text="El mantenimiento de estos equipos, se debe realizar de manera mensual, sin excepción. Esto debido a que su tiempo de operación son de alrededor de 11 hrs diarias.
Se recomienda tener el cuarto de máquinas despejado de todo aquello que no tenga con el equipo (archiveros, cajas, basura, etc).
Se debe de detallar el mantenimiento que se le realiza al equipo, incluyendo lecturas y temperaturas." />

        </LinearLayout>
    </android.support.v7.widget.CardView>