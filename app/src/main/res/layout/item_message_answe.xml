<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_eigth">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_message_answer"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_fiftytwo"
            android:elevation="@dimen/margin_eigth">
            <TextView
                android:id="@+id/item_message_txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FibraMTY dice: "
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/gray_font"
                android:layout_margin="@dimen/margin_four"
                android:elevation="@dimen/margin_eigth"/>
    <TextView
        android:id="@+id/item_message_answer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_below="@id/item_message_txt_user"
        android:paddingStart="@dimen/margin_twelve"
        android:paddingEnd="@dimen/margin_eigth"
        android:paddingBottom="@dimen/margin_eigth"
        android:elevation="@dimen/margin_eigth"/>
        </RelativeLayout>
</RelativeLayout>
