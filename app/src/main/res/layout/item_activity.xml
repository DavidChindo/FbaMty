<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle"
            android:orientation="vertical"
            android:padding="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_eigth">
                <TextView
                    android:id="@+id/item_activity_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/font_size_14"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/font_title_gray"
                    android:text="02 feb. 2018"
                    />
                <View
                    android:id="@+id/item_activity_notify"
                    android:layout_width="@dimen/margin_twelve"
                    android:layout_height="@dimen/margin_twelve"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/green"
                    android:background="@drawable/shape_circle_fill"/>

                <TextView
                    android:id="@+id/item_activity_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:layout_below="@id/item_activity_date"
                    android:layout_toLeftOf="@id/item_activity_notify"
                    android:layout_alignStart="@id/item_activity_date"
                    android:layout_marginTop="@dimen/margin_four"
                    android:layout_marginStart="@dimen/margin_four"
                    android:textColor="@color/black"
                    android:text="Ampliación de jardines del ala oeste y remodelación de terraza, con cubierta deck."
                    />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>